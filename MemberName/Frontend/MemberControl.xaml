<UserControl x:Class="MemberName.Frontend.MemberControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemberName.Frontend"
             mc:Ignorable="d" 
             Height="150" Width="300">
    <UserControl.DataContext>
        <local:MemberControlViewModel></local:MemberControlViewModel>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Width="150" Height="50" Content="Enter Member Name"></Label>
        <ComboBox Grid.Column="1" Grid.Row="0" Width="150" Height="30" IsEditable="True" 
                  Text="{Binding MemberSearchText, Delay=500, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                  ItemsSource="{Binding Members}"
                  DisplayMemberPath="MemberName"
                  IsSynchronizedWithCurrentItem="False"
                  IsDropDownOpen="{Binding IsOpened}"></ComboBox>
        <StackPanel Grid.ColumnSpan="2" Grid.Row="1">
            <RadioButton Content="Question" GroupName="ContributionGroup"/>
            <RadioButton Content="Answer" GroupName="ContributionGroup"/>
        </StackPanel>        
        <Button Margin="10" Grid.ColumnSpan="2" Grid.Row="2" Width="100" Height="30" Content="Insert"/>
    </Grid>
</UserControl>
